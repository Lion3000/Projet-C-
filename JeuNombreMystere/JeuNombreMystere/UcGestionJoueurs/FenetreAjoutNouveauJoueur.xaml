<Window x:Class="JeuNombreMystere.UcGestionJoueurs.FenetreAjoutNouveauJoueur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JeuNombreMystere.UcGestionJoueurs"
        mc:Ignorable="d"
        Title="Nouveau Joueur" Height="300" Width="300">
        <StackPanel Margin="5,5,5,5" VerticalAlignment="Top" >
            <DockPanel HorizontalAlignment="Center" LastChildFill="False" Margin="0,20,0,10">
                <Label Content="CRÉATION D'UN NOUVEAU JOUEUR" VerticalAlignment="Center" />
            </DockPanel>
            <DockPanel LastChildFill="False" Margin="0,20,0,10">
                <Label Content="Nom" VerticalAlignment="Top"  DockPanel.Dock="Left"/>
                <TextBox Name="Nom" TextWrapping="Wrap" Text="" Width="225"/>
            </DockPanel>
            <DockPanel LastChildFill="False" Margin="0,20,0,10">
                <Label Content="Login" VerticalAlignment="Top"  DockPanel.Dock="Left"/>
                <TextBox Name="Login" TextWrapping="Wrap" Text="" Width="225"/>
            </DockPanel>
            <Button HorizontalAlignment="Center" Content="Ajouter" Margin="30" Width="60" Click="Button_Click" />
        </StackPanel>
</Window>
